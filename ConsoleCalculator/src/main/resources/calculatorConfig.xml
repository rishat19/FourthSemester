<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="addition" class="ru.kpfu.itis.ganiev.calculator.Operator">
        <constructor-arg value="+"/>
    </bean>

    <bean id="subtraction" class="ru.kpfu.itis.ganiev.calculator.Operator">
        <constructor-arg value="-"/>
    </bean>

    <bean id="multiplication" class="ru.kpfu.itis.ganiev.calculator.Operator">
        <constructor-arg value="*"/>
    </bean>

    <bean id="multipleOperations" class="ru.kpfu.itis.ganiev.calculator.ComplexOperator">
        <constructor-arg name="firstOperator" ref="addition" />
        <constructor-arg name="secondOperator" ref="multiplication" />
        <constructor-arg name="thirdOperator" ref="subtraction" />
    </bean>

</beans>
